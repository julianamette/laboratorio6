from scipy.io import wavfile as wav
import numpy as np

####### Parametros Editables ###############
nombre = 'nombre_archivo' 
frec_adq = 25000
############################################

datos = np.loadtxt(nombre + '.csv', skiprows=2)
datos = list(datos) 

sonido_normalizado = datos/np.max(np.abs(datos))
